ScreenManager:
    LoginWindow:
    MenuWindow:
    Registration:
    SetPreferences:

<LoginWindow>:
    name: "login"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Username"
        TextInput:
            id: username
            multiline: False
            size_hint: 0.5, 0.3
            pos_hint: {"center_x": 0.5}
        Label:
            text: "Password"
        TextInput:
            id: password
            multiline: False
            password: True
            size_hint: 0.5, 0.3
            pos_hint: {"center_x": 0.5}
        Button:
            text: "Submit"
            on_release: root.login()
        Label:
            text: "Don't have an account? Register here"
        Button:
            id: register
            text: "Register here"
            on_release: root.registration_form()

<MenuWindow>:
    name: "menu"
    BoxLayout:
        orientation: "vertical"
        Button:
            id: profile
            text: "Profile"
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5}
            on_release: root.printid()
            # dodac show profile info
        Button:
            id: tasks
            text: "Tasks"
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5}
            # dodac show tasks
        Button:
            id: preferences
            text: "Preferences"
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5}
            # dodac show preferences
        Button:
            id: options
            text: "Options"
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5}
            # dodac show options

<Registration>:
    name: "registration"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "nickname"
        TextInput:
            id: nickname
            multiline: False
        Label:
            text: "password"
        TextInput:
            id: passw
            multiline: False
            password: True
        Label:
            text: "name"
        TextInput:
            id: name
            multiline: False
        Label:
            text: "surname"
        TextInput:
            id: surname
            multiline: False
        Label:
            text: "University"
        TextInput:
            id: university
            multiline: False
        Button:
            text: "confirm registration"
            on_release: root.register()
<SetPreferences>:
    name: "setpreferences"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Set preferences here by assigning a number 0-5 where 0 means no importance at all and 5 means maximum importance."
            pos_hint:{"center_x":0.5}
        Label:
            text: "By default all values are set to 1"
            pos_hint:{"center_x":0.5}
        GridLayout:
            cols: 2
            Label:
                text: "ECTS"
            TextInput:
                id: ects
                multiline: False
            Label:
                text: "Due date"
            TextInput:
                id: duedate
                multiline: False
            Label:
                text: "Grade percentage"
            TextInput:
                id: gradepercentage
                multiline: False
            Label:
                text: "Difficulty"
            TextInput:
                id: difficulty
                multiline: False
            Label:
                text: "Time Consumption"
            TextInput:
                id: time_consumption
                multiline: False
            Label:
                text: "Likability"
            TextInput:
                id: likability
                multiline: False
            Label:
                text: "Importance"
            TextInput:
                id: importance
                multiline: False
            Label:
                text: "Suddenness"
            TextInput:
                id: sudenness
                multiline: False
        Button:
            id: submitpref
            text: "Submit"
            on_release: root.setpreferences()





